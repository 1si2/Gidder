<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.antoniy.gidder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".app.GidderApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity android:name=".ui.activity.SplashScreenActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.AddUserActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_ADD_USER_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.AddRepositoryActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_ADD_REPOSITORY_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.SlideActivity" android:configChanges="orientation">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_SLIDE_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.RepositoryPermissionsActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_REPOSITORY_PERMISSIONS_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
		</activity>
		
        <activity android:name=".ui.activity.GidderPreferencesActivity">
            <intent-filter>
            	<action android:name="net.antoniy.gidder.START_PREFERENCE_ACTIVITY"/>
            	<category android:name="android.intent.category.DEFAULT"/>    
			</intent-filter>
        </activity>
		
        <activity android:name=".ui.activity.HomeActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_HOME_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.DynamicDNSActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_DYNAMIC_DNS_ACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activity.UserDetailsActivity">
            <intent-filter >
                <action android:name="net.antoniy.gidder.START_USER_DETAILS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <service android:name=".service.SSHDaemonService"/>
        
        <receiver android:name=".receiver.ConnectivityChangeBroadcastReceiver" android:enabled="true" android:exported="false">
        	<intent-filter >
        	    <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
        	</intent-filter>    
		</receiver>
		
        <receiver android:name=".receiver.DynamicDNSReceiver" android:enabled="true" android:exported="false">
        	<intent-filter >
        	    <action android:name="net.antoniy.gidder.UPDATE_DYNAMIC_DNS" />
        	</intent-filter>    
		</receiver>
    </application>

</manifest>
