<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spashScreenContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_bg">

    <ImageView
        android:id="@+id/splashScreenImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash" 
        android:layout_marginTop="50dp"
        android:contentDescription="Splash screen logo"/>
    
    <TextView 
        android:id="@+id/splashScreenTitleTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/splashScreenImageView"
        android:gravity="center"
        android:text="Gidder v1.0"
        android:textColor="#000000" 
        android:layout_centerInParent="true"
        android:textSize="26sp" />

    <TextView 
        android:text="Git server over SSH for Android"
        android:id="@+id/splashScreenSubtitleTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashScreenTitleTextView"
        android:gravity="center" 
        android:textColor="#000000" 
        android:textSize="14sp" 
        android:textStyle="italic"/>
    
    <LinearLayout 
        android:id="@+id/splashScreenDonateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/donate_btn_selector"/>
    
