<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D4D4D4"
    android:orientation="vertical" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/addRepositoryActionBar"
        style="@style/ActionBar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_box"
        android:orientation="vertical"
        android:padding="5dp" >

        <EditText
            android:id="@+id/addRepositoryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/add_repository_name"
            android:inputType="textCapWords" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/addRepositoryMapping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_repository_mapping"
            android:inputType="text" />

        <EditText
            android:id="@+id/addRepositoryDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_repository_description"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/addRepositoryBtnAdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_add" />

        <Button
            android:id="@+id/addRepositoryBtnCancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_cancel" />
    </LinearLayout>

</LinearLayout>